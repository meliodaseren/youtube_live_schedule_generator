{
    "workbench.colorTheme": "Horizon",
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "editor.rulers": [
        79
    ],
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.fontSize": 15,
    // "editor.fontFamily": "'DisposableDroid BB', Consolas, 'Courier New', 'monospace', 'SourceCodePro-Medium'",
    "vim.disableAnnoyingNeovimMessage": true, // Win10
    // "python.pythonPath": "${config:python.pythonPath}", // Mac
    //"python.pythonPath": "/Users/huangyue-lun/.pyenv/shims/python",

    /* Golang */
    "files.autoSave": "onFocusChange",
    "go.buildOnSave": "true",
    "go.lintOnSave": "true",
    "go.vetOnSave": "true",
    "go.buildFlags": [],
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.formatTool": "goreturns",
    "go.goroot": "/usr/local/opt/go/libexec",
    "go.gopath": "/Users/huangyue-lun/proj/go_project",
    // User defined GOPATH setting
    //"terminal.integrated.shell.windows": "",
    //"go.gopath": "${workspaceRoot}",
    //"go.inferGopath": true

    /* TODO Highlight setting */
    "todohighlight.keywords": [
        // TODO: FIXME:
        {
            "text": "NOTE:",
            "color": "#ffffff",
            "backgroundColor": "#008080",
            "isWholeLine": "true"
        },
        {
            "text": "HACK:",
            "color": "#ffffff",
            "backgroundColor": "#9932CC"
        },
        {
            "text": "XXX:",
            "color": "#ffffff",
            "backgroundColor": "#DC143C"
        }
    ],
    "vsicons.dontShowNewVersionMessage": true,

    /* Markdown */
    "markdown.preview.fontSize": 13,
    "markdown.preview.lineHeight": 1.4,

